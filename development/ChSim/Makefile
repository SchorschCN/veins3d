#
#  Makefile for ChSim
#
#  ** This file was automatically generated by the command:
#  opp_makemake -f -u Cmdenv
#

# Name of target to be created (-o option)
TARGET = ChSim

# User interface (uncomment one) (-u option)
#USERIF_LIBS=$(CMDENV_LIBS)
USERIF_LIBS=$(TKENV_LIBS)

# .ned or .h include paths with -I
INCLUDE_PATH=

# misc additional object and library files to link
EXTRA_OBJS=

# object files from other directories to link with (wildcard needed to prevent "no such file *.o" errors)
EXT_DIR_OBJS=

# time stamps of other directories (used as dependency)
EXT_DIR_TSTAMPS=

# Additional libraries (-L option -l option)
LIBS=

#------------------------------------------------------------------------------

# Generic definitions. To avoid redundancies across Makefiles, you can
# import them from a common file -- see opp_makemake -c flag.
NEDC=C:/cygwin/usr/local/lib/omnetpp-3.2p1/bin/nedtool
MSGC=opp_msgc
CXX=g++
CC=gcc
AR=ar cr
SHLIB_LD=g++ -shared 
MAKEDEPEND=opp_makedep -Y --objdirtree

CFLAGS=-O2 -DNDEBUG=1   -DWITH_NETBUILDER
NEDCFLAGS=-Wno-unused
LDFLAGS= -s -Xlinker --stack -Xlinker 134217728
EXE_SUFFIX=.exe

WITH_PARSIM=no
WITH_NETBUILDER=yes

OMNETPP_INCL_DIR=C:/cygwin/usr/local/lib/omnetpp-3.2p1/include
OMNETPP_LIB_DIR=C:/cygwin/usr/local/lib/omnetpp-3.2p1/lib

TK_LIBS= -ltk84 -ltcl84
MPI_LIBS=
XML_LIBS=-lexpat
SYS_LIBS=-lwsock32 -lstdc++ 
SYS_LIBS_PURE=-ldl -lsocket -lnsl -lm $(shell $(CXX) -print-file-name=libstdc++.a)

# User interface libs
CMDENV_LIBS=-lenvir -lcmdenv
TKENV_LIBS=-lenvir -ltkenv $(TK_LIBS)

# Simulation kernel
KERNEL_LIBS=-lsim_std

ifeq ($(WITH_NETBUILDER),yes)
KERNEL_LIBS += -lnedxml $(XML_LIBS)
endif

ifeq ($(WITH_PARSIM),yes)
KERNEL_LIBS += $(MPI_LIBS)
endif

# Simulation kernel and user interface libraries
OMNETPP_LIBS=-L$(OMNETPP_LIB_DIR) $(USERIF_LIBS) $(KERNEL_LIBS) $(SYS_LIBS)

COPTS=$(CFLAGS) $(INCLUDE_PATH) -I$(OMNETPP_INCL_DIR)
NEDCOPTS=$(COPTS) $(NEDCFLAGS)
MSGCOPTS= $(INCLUDE_PATH)

#------------------------------------------------------------------------------

# subdirectories to recurse into
SUBDIRS= 

# object files in this directory
OBJS= mobileStation_n.o wirelessCell_n.o wirelessChannel_n.o channelStateMsg_m.o channelManager.o channelStateCalc.o  errorCalc.o fileWriter.o  ms.o triggerGen.o  

# header files generated (from msg files)
GENERATEDHEADERS= channelStateMsg_m.h

#------------------------------------------------------------------------------

$(TARGET): $(OBJS) $(EXTRA_OBJS) $(EXT_DIR_TSTAMPS) Makefile
	$(CXX) $(LDFLAGS) $(OBJS) $(EXTRA_OBJS) $(EXT_DIR_OBJS) $(LIBS) $(OMNETPP_LIBS) -o $(TARGET)
	echo>.tstamp

$(OBJS) : $(GENERATEDHEADERS)


purify: $(OBJS) $(EXTRA_OBJS) $(EXT_DIR_TSTAMPS) Makefile
	purify $(CXX) $(LDFLAGS) $(OBJS) $(EXTRA_OBJS) $(EXT_DIR_OBJS) $(LIBS) -L$(OMNETPP_LIB_DIR) $(KERNEL_LIBS) $(USERIF_LIBS) $(SYS_LIBS_PURE) -o $(TARGET).pure

.PHONY: subdirs $(SUBDIRS)

subdirs: $(SUBDIRS)

mobileStation_n.o: mobileStation_n.cc
	$(CXX) -c $(NEDCOPTS) mobileStation_n.cc

mobileStation_n.cc: mobileStation.ned
	$(NEDC) $(INCLUDE_PATH) mobileStation.ned

wirelessCell_n.o: wirelessCell_n.cc
	$(CXX) -c $(NEDCOPTS) wirelessCell_n.cc

wirelessCell_n.cc: wirelessCell.ned
	$(NEDC) $(INCLUDE_PATH) wirelessCell.ned

wirelessChannel_n.o: wirelessChannel_n.cc
	$(CXX) -c $(NEDCOPTS) wirelessChannel_n.cc

wirelessChannel_n.cc: wirelessChannel.ned
	$(NEDC) $(INCLUDE_PATH) wirelessChannel.ned

channelStateMsg_m.o: channelStateMsg_m.cc
	$(CXX) -c $(NEDCOPTS) channelStateMsg_m.cc

channelStateMsg_m.cc channelStateMsg_m.h: channelStateMsg.msg
	$(MSGC) $(MSGCOPTS) channelStateMsg.msg

channelManager.o: channelManager.cc
	$(CXX) -c $(COPTS) channelManager.cc

channelStateCalc.o: channelStateCalc.cc
	$(CXX) -c $(COPTS) channelStateCalc.cc

errorCalc.o: errorCalc.cc
	$(CXX) -c $(COPTS) errorCalc.cc

fileWriter.o: fileWriter.cc
	$(CXX) -c $(COPTS) fileWriter.cc

ms.o: ms.cc
	$(CXX) -c $(COPTS) ms.cc

triggerGen.o: triggerGen.cc
	$(CXX) -c $(COPTS) triggerGen.cc


#doc: neddoc doxy

#neddoc:
#	opp_neddoc -a

#doxy: doxy.cfg
#	doxygen doxy.cfg

generateheaders: $(GENERATEDHEADERS)
	for i in $(SUBDIRS); do (cd $$i && $(MAKE) generateheaders) || exit 1; done

clean:
	rm -f $(TARGET)$(EXE_SUFFIX)
	rm -f *.o *_n.cc *_n.h *_m.cc *_m.h .tstamp
	rm -f *.vec *.sca
	for i in $(SUBDIRS); do (cd $$i && $(MAKE) clean); done

depend:
	$(MAKEDEPEND) $(INCLUDE_PATH) -- *.cc
	# $(MAKEDEPEND) $(INCLUDE_PATH) -fMakefile.in -- *.cc
	for i in $(SUBDIRS); do (cd $$i && $(MAKE) depend) || exit 1; done

makefiles:
	# recreate Makefile
	opp_makemake -f  -u Cmdenv 
	for i in $(SUBDIRS); do (cd $$i && $(MAKE) makefiles) || exit 1; done

makefile-ins:
	# recreate Makefile.in
	opp_makemake -f -m  -u Cmdenv 
	for i in $(SUBDIRS); do (cd $$i && $(MAKE) makefile-ins) || exit 1; done

# "re-makemake" and "re-makemake-m" are deprecated, historic names of the above two targets
re-makemake: makefiles
re-makemake-m: makefile-ins


# DO NOT DELETE THIS LINE -- make depend depends on it.
channelManager.o: channelManager.cc \
  channelStateMsg_m.h
channelStateCalc.o: channelStateCalc.cc \
  channelStateMsg_m.h
channelStateMsg_m.o: channelStateMsg_m.cc \
  channelStateMsg_m.h
errorCalc.o: errorCalc.cc \
  channelStateMsg_m.h
fileWriter.o: fileWriter.cc \
  channelStateMsg_m.h
mobileStation_n.o: mobileStation_n.cc
ms.o: ms.cc \
  channelStateMsg_m.h
triggerGen.o: triggerGen.cc
